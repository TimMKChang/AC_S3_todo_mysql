<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">Login</h1>

      {{> message}}

      <form action="/users/login" method="POST">
        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" />
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" />
        </div>
        <button type="submit" class="btn btn-primary btn-block">Login</button>

        <a href="/auth/facebook" class="btn btn-info btn-block d-flex align-items-center justify-content-center">
          <i class="fab fa-facebook-square" style="font-size: 2rem; position: absolute; left: 25%;"></i>
          <span>Facebook Login</span>
        </a>
        <a href="/auth/google" class="btn btn-danger btn-block d-flex align-items-center justify-content-center">
          <i class="fab fa-google-plus-square" style="font-size: 2rem; position: absolute; left: 25%;"></i>
          <span>Google Login</span>
        </a>

      </form>
      <p class="lead mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>
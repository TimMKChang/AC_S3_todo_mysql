<h4>Welcome back {{user.name}}!</h4>

<a href="/todos/new" class="btn btn-primary mb-3">Create</a>

<ul class="list-group">
  {{#each todos}}
  <li class="list-group-item">

    <div class="row">

      <div class="col-auto mr-auto">
        <input type="checkbox" name="done" {{#if this.done}} checked {{/if}} disabled>
        <h4 style="display: inline;">{{this.name}}</h4>
      </div>

      <div class="col-auto">
        {{#if this.userEmail}}
        <button type="button" class="btn btn-info" disabled>Created by: <span class="d-inline-block text-left"
            style="width: 200px;">{{this.userEmail}}</span></button>
        {{/if}}
        <a href="/todos/{{this._id}}" class="btn btn-secondary">detail</a>
        <a href="/todos/{{this._id}}/edit" class="btn btn-success">edit</a>
        <form action="/todos/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
          <button type="submit" class="btn btn-danger">delete</button>
        </form>
      </div>

    </div>

  </li>
  {{/each}}
</ul>